<%# Errors if any %>

<div >
        <% if @user.errors.any? %>
        <h2 class="text-danger"> Following Errors Preventing Creation of the Article </h2> 
            <ul class="text-danger " >
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <%end%>
            </ul>

        <% end %>
</div>


<%# Rendering SignUp Form %>


<div class="row" >
    <div class="col-xs-12"  >
        <%= form_for(@user, :html => {class: "form-horizontal bg-success 
            shadow rounded p-4 mb-4", role: "form"}) do |f|%>

            <div class="form-group"  >
                <div class="control-label col-sm-2" >
                    <%= f.label :username %> <br>
                </div>

                <div class = "col-sm-8">
                    <%= f.text_field :username, class: "form-control" %>
                </div>

            </div>
            <div class="form-group"  >
                <div class="control-label col-sm-2" >            
                    <%= f.label :email %> <br>
                </div>

                <div class = "col-sm-8">
                    <%= f.email_field :email,  class: "form-control " %>
                </div>
            </div>

            <div class="form-group"  >
                <div class="control-label col-sm-2" >            
                    <%= f.label :password %> <br>
                </div>

                <div class = "col-sm-8">
                    <%= f.password_field :password,  class: "form-control " %>
                </div>
            </div>

            <div class="form-group " >
                <div class="col-sm-offset-2 col-sm-10 ">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary ") %> 
                </div>
            </div>

        <%end%>
        <div class= "col-xs-4 col-xs-offset-5" >
            <%= link_to "Back to Articles Listing", articles_path %>
        </diV>
    </div>
</div>