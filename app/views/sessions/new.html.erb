<h1 class="text-center mt-4"> <strong> Login </strong> </h1>


<div class="row" >
    <div class="col-xs-12"  >
        <%= form_with(scope: :session, url: login_path, class: "form-horizontal shadow p-4 
            mb-4 bg-info rounded", local:true) do |f|%>

           
            <div class="form-group"  >
                <div class="control-label col-sm-2" >            
                    <%= f.label :email %> <br>
                </div>

                <div class = "col-sm-8">
                    <%= f.email_field :email,  class: "form-control " %>
                </div>
            </div>

            <div class="form-group"  >
                <div class="control-label col-sm-2" >            
                    <%= f.label :password %> <br>
                </div>

                <div class = "col-sm-8">
                    <%= f.password_field :password,  class: "form-control " %>
                </div>
            </div>

            <div class="form-group " >
                <div class="col-sm-offset-2 col-sm-10 ">
                    <%= f.submit "Login", class: "btn btn-light " %> 
                </div>
            </div>

        <%end%>
        <div class= "col-xs-4 col-xs-offset-5" >
            <%= link_to "Back to Articles Listing", articles_path %>
        </diV>
    </div>
</div>